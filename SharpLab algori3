/* Algoritim 3: C√°lculo de sal√°rio com comiss√£o
  - Dados o sal√°rio fixo e o valo  total das vendas efetuadas por um
    vendedor
  - sabendo que ele recebe 5% de comiss√£o sobre o valor total de
    vendas at√© R$2.000,00 e mais 10% sobre do que ultrapassar esse
    valor
  - Calcular e exibir seu sal√°rio total
*/
decimal salarioFixo = 4000;
decimal totalVendas = 6000;

decimal comissao = 0;

if (totalVendas > 2000)
{
  comissao =(totalVendas - 2000) * 0.1m + (2000 * 0.05m);
  comissao = comissao ;
}
else
{
  comissao = totalVendas * 0.05m;    
}
Console.WriteLine($"O Sal√°rio total √©: {comissao + salarioFixo}");
